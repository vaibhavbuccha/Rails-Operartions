<!DOCTYPE html>
<html>
  <head>
    <title>Insta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to( "Instagram" , root_path() , class: "navbar-brand") %>
          <ul class="navbar-nav mr-auto">
              <li class="nav-item" >
                <%= link_to "Home" ,root_path ,class: "nav-link" %>
              </li>
              <li class="nav-item" >
                <%= link_to "Resent" ,root_path ,class: "nav-link" %>
              </li>
              <li class="nav-item" >
                <%= link_to "Upload" ,upload_path ,class: "nav-link btn btn-primary " %>
              </li>
          </ul>

          <ul class="navbar-nav" >
            <% if user_signed_in? %>
              <li class="nav-item" >
                  <%= link_to current_user.full_name , root_path ,class: 'nav-link' %>
              </li>
              <li class="nav-item" >
                <%= link_to "LogOut" , destroy_user_session_path, class: 'nav-link' , method: :delete  %>
              </li>
            <% else %>
              <li class="nav-link">
                <%= link_to "Sign In" , new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-link">
                <%= link_to "Create an Account" ,new_user_registration_path, class: "nav-link btn btn-primary "  %>
              </li>
            <% end %>
          </ul>
        </div>
          
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
